{
  "manifest_version": 2,
  "name": "Make GitHub Pages Full Width",
  "description": "Makes the GitHub Pull Request, Commit, and Blob pages span the full width of the browser.",
  "version": "1.0",
  "icons": { "128": "icon_128.png" },
  "content_scripts": [
    {
      "matches": ["https://github.com/*/pull/*/files*", "https://github.com/*/commit/*", "https://github.com/*/blob/*"],
      "js": ["MakeGitHubPullRequestCommitAndBlobPagesFullWidth.user.js"]
    }
  ]
}